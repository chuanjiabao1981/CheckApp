<div class="box">
  <div class="row">
    <div class="span10 offset1">
      <%= form_for(location,url:post_url,html:{class:"form-horizontal"}) do |f| %>
        <legend><%= legend_name %></legend>
        <fieldset>
          <%= render 'shared/error_messages' ,:object => f.object%>
          <div class="control-group">
            <%= f.label :name,"位置名称" ,class:"control-label"%>
            <div class="controls">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :des,"位置描述" ,class:"control-label"%>
            <div class="controls">
              <%= f.text_area :des ,:rows => 3%>
            </div>
          </div>
          <div class="form-actions">
             <%= f.submit action_name ,class:"btn btn-primary"%>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
