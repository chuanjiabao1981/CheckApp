<% provide(:title, "全部位置信息") %> 
<%= render partial:'locations/nav',locals:{zone_admin:@zone_admin,action_name:'位置信息管理'} %>
<p>
	<button class="btn"><%= link_to '添加位置',new_zone_admin_location_path(@zone_admin) %></button>
</p>
<div class="box">
	<div class="row">
		<div class="span10 offset1">
			<legend>全部位置信息</legend>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th width="20%">名称</th>
						<th width="50%">描述</th>
						<th colspan="2">操作</th>
					</tr>
				</thead>
			  <% @locations.each do |l| %>
			    <tr>
			      <td><%= l.name %></td>
			      <td><%= l.des  %></td>
			      <td><%= link_to '编辑',edit_location_path(l) %> </td>
			      <td><%= link_to '删除',location_path(l),method: :delete,confirm:"确定要删除这个位置以及相关报告吗？" %></td>
			    </tr>
			  <% end %>
			</table>
		</div>
	</div>
</div>
