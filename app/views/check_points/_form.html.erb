<div class="box">
	<div class="row">
		<div class="span10 offset1">
			<legend><%= legend_name %></legend>
			<%= form_for(check_point,url:post_url,html:{class:"form-horizontal"}) do |f| %>
  				<%= render 'shared/error_messages' ,:object => f.object%>
  				<fieldset>
  					<div class="control-group">
  						<%= f.label :content,"检查内容描述",class:"control-label" %>
  						<div class="controls">
  							<%= f.text_area :content,rows:3 %>
  						</div>
  					</div>
  					<div class="control-group">
  						<%= f.label :can_photo, "需要图片" ,class:"control-label"%>
  						<div class="controls">
  							<%= f.check_box :can_photo %>
  						</div>
  					</div>
  					<div class="form-actions">
  						<%= f.submit action_name ,class:"btn btn-primary"%> 
  					</div>
  				</fieldset>
			<% end %>
		</div>
	</div>
</div>
