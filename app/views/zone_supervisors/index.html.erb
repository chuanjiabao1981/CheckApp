<% provide(:title, "全部督察员") %> 
<%= render partial:'zone_supervisors/nav',locals:{zone_admin:@zone_admin,action_name:'全部督察员'} %>
<p>
	<button class="btn"><%= link_to '添加督察员',new_zone_admin_zone_supervisor_path(@zone_admin) %></button>
</p>
<div class="box">
	<div class="row">
		<div class="span10 offset1">
			<legend>全部督察员</legend>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th width="5%">#</td>
						<th width="20%">账号</th>
						<th width="30%">监管分区</th>
						<th colspan="2">操作</th>
					</tr>
				</thead>
			  <% @zone_supervisors.each_with_index do |s,i| %>
			    <tr>
			      <td><%= i %></td>
			      <td><%= link_to s.name,zone_supervisor_path(s) %></td>
			      <td>
			      	<ol>
			      		<% s.zones.each do |z| %>
			      			<li> <%= z.name %> </li>
			      		<% end %>
			      	</ol>
			      </td>
			      <td><%= link_to '编辑',edit_zone_supervisor_path(s) %> </td>
			      <td><%= link_to '删除',zone_supervisor_path(s),method: :delete,confirm:"确定要删除这个督察员吗？" %></td>
			    </tr>
			  <% end %>
			</table>
		</div>
	</div>
</div>

