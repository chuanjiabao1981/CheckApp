<div class="box">
  <div class="row">
    <div class="span10 offset1">
      <legend><%= legend_name %></legend>
      <%= form_for(zone_admin,url:post_url,html:{class:"form-horizontal"}) do |f| %>
        <%= render 'shared/error_messages' ,:object => f.object%>
        <fieldset>
          <div class="control-group">
            <%= f.label :name,"账号" ,class:"control-label"%>
            <div class="controls">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :template_max_num,"可创建摸板个数",class:"control-label"%>
            <div class="controls">
              <%= f.text_field :template_max_num %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :template_max_video_num,"摸板视频个数",class:"control-label" %>
            <div class="controls">
              <%= f.text_field :template_max_video_num %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :template_max_photo_num,"摸板图像个数",class:"control-label" %>
            <div class="controls">
              <%= f.text_field :template_max_photo_num %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :check_point_video_num,"单个检查点可拍摄视频",class:"control-label" %>
            <div class="controls">
              <%= f.text_field :check_point_video_num %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :check_point_photo_num,"单个检查点可拍摄图片",class:"control-label" %>
            <div class="controls">
              <%= f.text_field :check_point_photo_num %>
            </div>
          </div>
          <div class="control-group"> 
            <%= f.label :password ,"密码",class:"control-label"%>
            <div class="controls">
              <%= f.password_field :password %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password_confirmation, "确认密码" ,class:"control-label"%>
            <div class="controls">
              <%= f.password_field :password_confirmation %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :des,"备注" ,class:"control-label"%>
            <div class="controls">
              <%= f.text_area :des,rows:3 %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit action_name, class: "btn btn-primary" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>